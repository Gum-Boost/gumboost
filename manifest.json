{
  "manifest_version": 3,
  "name": "GumBoost â€“ Auto Reposter for Gumtree",
  "version": "1.1",
  "description": "Automatically repost expired Gumtree ads and stay at the top. Includes a 10-ad free trial.",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["https://www.gumtree.com.au/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.gumtree.com.au/*"],
      "js": ["content.js"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}
